<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/radarProfileEventName"
        android:maxEms="18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/radarProfileDescription"
        android:maxEms="18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Description"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/radarProfileEventName"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/radarProfileSkillsetRequired"
        android:maxEms="18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills required"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/radarProfileDescription"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>