<!doctype html>
<html >
<head >
    <%
    user = user[0]
    console.log(user);
    %>
    <%- include ../../Partials/AboveFold.ejs %>
</head >
<body >
<%- include ./partials/nav.ejs %>
<%-include ../../Partials/UserInfo.ejs%>
<main >

    <div class="center white darken-1">
        <div class="center header card-content rectangle" style="width:100% ;height:300px;
            background: url('images/background/background3.jpg'); ">

            <div class="center-align hide-on-med-and-down">
                <img class="circle center" src="images/profilePics/<%= user.id %>.png" alt=""
                     style="width:20%;height:20%;border: solid red; margin-top: 10%">
            </div>
            <div class="center-align hide-on-large-only">
                <img class="circle center" src="images/profilePics/<%= user.id %>.png" alt=""
                     style="width:40%;height:40%;border: solid red; margin-top: 20%">
            </div>

        </div>

        <div class="card-title center hide-on-med-and-down" style="margin-top: 10%;" >
            <div class="center" style="display: inline-block"><h2 style="display: inline-block"><%= user.firstname %> <%= user.surname %></h2>
                <h4 >@<%= user.username %></h4 >
            </div><a href="/settings" class=" tooltipped button transparent rounded red red-text"
                     data-position="bottom" data-delay="50" data-tooltip="Settings"
                     style="border: groove; border-radius: 25px;">edit settings
            </a>


        </div >
        <div class="card-title center hide-on-large-only" style="margin-top: 25%;" >
            <h2 class="center" ><%= user.firstname %> <%= user.surname %></h2>
            <h4 class="center" >@<%= user.username %></h4 >
            <a href="/settings" class="tooltipped right-aligned"
               data-position="bottom" data-delay="50" data-tooltip="Settings">
                <i class="medium material-icons">settings_applications</i>
            </a>
        </div >
        <div class="card center" style="margin-top: 1%; border-top: groove; margin-right: 25%; margin-left: 25%;">
        <p class="center-align">
            <a data-target="followers"  class="modal-trigger btn-flat" style="font-size: 90%">Followers: 4</a>
            &emsp;&emsp;
            <a data-target="following" class="btn-flat modal-trigger" style="font-size: 90%">Following: 3</a>

             </p>
        </div>
    <div class="card white darken-1" style="margin-top:2%; margin-right: 25%; margin-left: 25%;" >
        <div class="card-content" >

            <%if((user.description != "nothing for now") || (user.description != null)) {%>
            &emsp;<h4><%=user.description%></h4>
            </div>
            <%}%>
            <i class="small material-icons">music_note</i><%= user.genre%>
            <%if(user.song_link != null)
            {%>
            <div>
            <i class="small material-icons">insert_link</i>
                <a href="<%= user.song_link%>"><%= user.song_link%></a></div>
            <%}%>
            <br>
            <i class="small material-icons">location_on</i><%= user.city%>
            <br>

        <br>



        </div >

        <div class="card center" style="margin-top: 1%; border-top: groove; margin-right: 25%; margin-left: 25%;">
            <% for(i=0; i < 5; i++)
            {%>
            <div class=" small center chip" style="margin-top: 1%">
                <img src="images/profilePics/<%= user.id %>.png" alt="<%=user.username%>">
                Skill Name
            </div>
            <%}%>
        </div>

        <div class="card center" style="margin-top: 1%; border-top: groove; margin-right: 25%; margin-left: 25%;">
        <ul class="tabs tabs-fixed-width"  >

            <li id="Posts" class="tab col s3" >
                <a href="#Timeline" onclick="Materialize.showStaggeredList('#Timeline')" >
                    <i class="small material-icons right-align" >dehaze</i >Timeline
                    <span id="numPosts" class="new badge" ></span >
                </a >
            </li >

            <li id="Attended" class="tab col s3" >
                <a href="#AttendedEvents" onclick="Materialize.showStaggeredList('#AttendedEvents')" >
                    Events Attended<span id="numUsers" class="new badge" ></span >
                </a >
            </li >

            <li id="Upcoming" class="tab col s3" >
                <a href="#UpcomingEvents" onclick="Materialize.showStaggeredList('#UpcomingEvents')" >
                    Upcoming Events</a >
            </li >

        </ul >
        </div>
        <br>

    </div >




    <div id="Timeline" class="col s12" style="margin-top: 5%;margin-bottom: 10%; margin-left: 25%; margin-right:30%" >
        <div >
            <ul id="posts" class="collection truncate" >
                <% UserPosts.forEach(function (post) {
                %>
                <li class="collection-item avatar" >
                    <div>
                        <img src="images/profilePics/<%= post.user_id %>.png"
                             alt="<%= user.username %>" width="100" height="100" class="circle" >
                        <%var theDate = new Date(post.timestamp* 1000); %>
                        <strong><%= user.firstname %> <%= user.surname %></strong> &emsp; <%= user.username %>
                        &emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp;<%= theDate.getDay()%> <%= theDate.getMonth()%> <%= theDate.toLocaleTimeString()%>
                    </div>
                    </br>
                    <p ><span class="title" ><%= post.status %></span ></p>
                    </br>
                    <p > <%= post.liked %> likes  &emsp; &emsp;
                        <%= post.flag %> flags &emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp;
                        <a class="btn-flat right"><i class="medium material-icons tooltipped" data-tooltip="Delete Post">delete</i></a>
                    </p >
                </li >
                <% }) %>
            </ul >
        </div >
    </div >


    <div id="UpcomingEvents" class="col s12"
         style="margin-top: 5%;margin-bottom: 10%; margin-left: 10%; margin-right: 10%" >
        <div >
            <ul id="posts" class="collection truncate" >
                <%if(UserUpcomingEvents == null || UserUpcomingEvents == "")
                { %>
                <div>
                    <div class="card col s4 right" style="margin-top: 15%; margin-right: 10%">
                        <div class="card-content">
                            <div class="center">
                                <strong>Start capturing and sharing your moments.</strong>
                                <br>
                                Get the app to share your first event.
                                <br>
                                <a href="https://play.google.com/store?hl=en" >
                                    <img alt="Get it on Google Play"
                                         src="https://play.google.com/intl/en_us/badges/images/generic/en_badge_web_generic.png"
                                         width='200' height='70' >
                                </a >
                            </div>

                        </div>
                    </div>

                    <div class="card col s4 slider" style="width: 50% ;height: 50%">
                        <ul class="slides">
                            <li>
                                <img src="/images/Ad.jpg">
                            </li>
                            <li>
                                <img src="/images/Ad2.jpg">
                            </li>
                        </ul>

                    </div>

                </div>
                <%}else
                    UserUpcomingEvents.forEach(function (event) {  %>

                <li class="collection-item avatar" >
                    <div ><img src="/images/profilePics/<%= event.user_id %>.png" alt="images/empty.png"
                               class="circle" >
                        <span class="title" >Title: <%= event.title %></span >
                        <p ><%= event.description %></p ></div >
                </li >
                <% }) %>
            </ul >
        </div >
    </div >

    <div id="AttendedEvents" class="col s12 modal-trigger"
         style="margin-top: 5%;margin-bottom: 10%; margin-left: 10%; margin-right: 10%" data-target="finDetails" >
        <div >
            <ul id="posts" class="collection truncate collapsible popout" data-collapsible="accordion" >
                <% console.log(UserFinishedEvents);
                if(UserFinishedEvents == null || UserFinishedEvents == "")
                {%>
                <div>
                    <div class="card col s4 right" style="margin-top: 15%; margin-right: 10%">
                        <div class="card-content">
                            <div class="center">
                                <strong>Start capturing and sharing your moments.</strong>
                                <br>
                                Get the app to share your first event.
                                <br>
                                <a href="https://play.google.com/store?hl=en" >
                                    <img alt="Get it on Google Play"
                                         src="https://play.google.com/intl/en_us/badges/images/generic/en_badge_web_generic.png"
                                         width='200' height='70' >
                                </a >
                            </div>

                        </div>
                    </div>

                    <div class="card col s4 slider" style="width: 50% ;height: 50%">
                        <ul class="slides">
                            <li>
                                <img src="/images/Ad.jpg">
                            </li>
                            <li>
                                <img src="/images/Ad2.jpg">
                            </li>
                        </ul>

                    </div>

                </div>

                <%}else
                    UserFinishedEvents.forEach(function (event) { %>
                <li class="collection-item avatar" >
                    <div class="collapsible-header">
                        <img src="/images/profilePics/<%= event.user_id %>.png" alt="images/empty.png"
                               class="circle" >
                        <span class="title" >Title: <%= event.title %></span >
                        <p ><%= event.description %></p >
                    </div >

                    <div id="finDetails" class="collapsible-body">
                        <div>
                            <div class="card-content">
                                Event Name:
                                Event Details
                                Event Date
                                Overall Ratig for event
                                <br>
                                Users: + Skill and Rating
                                <br>
                                Comments ordered by User
                            </div>
                        </div>

                    </div>

                </li >
                <% }) %>
            </ul >
        </div >
    </div >


    <ul id="posts" class="collection truncate collapsible popout" data-collapsible="accordion">
        <%for(i = 0; i< 5; i++) { %>
        <li class="collection-item avatar" >
            <div class="collapsible-header" >Hello</div >

            <div id="finDetails" class="collapsible-body">
                <div>
                    <div class="card-content">
                        Event Name:
                        Event Details
                        Event Date
                        Overall Ratig for event
                        <br>
                        Users: + Skill and Rating
                        <br>
                        Comments ordered by User
                    </div>
                </div>

            </div>

        </li >
        <% } %>
    </ul >


</main >
<%- include ../../Partials/footer.ejs %>
