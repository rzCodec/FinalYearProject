<!-- views/login.ejs -->
<!doctype html>
<html >
<head >
    <%- include ../../Partials/AboveFold.ejs %>
</head >
<body>
<%- include ./partials/nav.ejs %>
<main  >

    <div class="container" style="display: inline-block; margin-top: 5%" >

        <div class="right col-sm-6 col-sm-offset-3" >

            <br>
            <br>
            <% if (message.length > 0) { %>
            <div class="alert alert-danger" ><%= message %></div >
            <% } %>

            <div class="row right card " style="margin-left: 20%" >
                <h1 class="center"><span class=" center-align fa fa-sign-in" ></span > Login</h1 >
                <div>
                    <form action="/login" method="post" id="formValidate" class=" col s12 formValidate"
                                        novalidate="novalidate" >
                        <div class="row center-align " >
                            <div class="center input-field col s12"   >
                                <input style="width:70%" id="username" name="username" placeholder="Email Address"
                                       type="email" data-error=".errorTxt2" >
                                <div class="errorTxt2" ></div >
                            </div >
                            <div class="center input-field col s12" >
                                <input style="width:70%" id="password" type="password" placeholder="Password"
                                       name="password" data-error=".errorTxt3" >
                                <div class="errorTxt3" ></div >
                            </div >
                            <div class="input-field col s12" >
                                <button class="btn waves-effect waves-light" type="submit" name="action" >Login</button >
                            </div >

                        </div >
                    </form >
                </div>

            </div >

            <br >
            <div class="center-align" style="margin-left: 20%">
                <br>
                Need an account?
                <a href="/signup" >Signup
                    <br>
                </a >
            </div >
            <div class="center-align" style="margin-left: 20%">
                <p>Get the app</p>
                <a  href="https://play.google.com/store?hl=en" >
                    <img alt="Get it on Google Play"
                         src="https://play.google.com/intl/en_us/badges/images/generic/en_badge_web_generic.png"
                         width='200' height='70' >
                </a >
            </div>
            <br>
            <br>
        </div >
        <div class="card col s4 slider" style="width: 50% ;height: 50%; margin-left: 5%">

            <ul class="slides white" >
                <li class="right">
                    <div class="caption right-align top blue-text">
                        <h3>Connect Using Our Mobile App.</h3>
                        <h5 class="orange-text">Start sharing moments</h5>
                        <img src="images/logo/header2.png" style="width: 250px; height: 30px"class="brown-text" >
                    </div>
                    <img src="images/adverts/eternalvibesmobile1.png"  style="width: 220px;height: 430px;">
                </li>
                <li class="right">
                    <div class="caption right-align top blue-text">
                        <h3>Create Events.</h3>
                        <h5 class="orange-text">Make the perfect song</h5>
                        <img src="images/logo/header2.png" style="width: 250px; height: 30px"class="brown-text" >
                    </div>
                    <img src="images/adverts/eternalvibesmobile2.png" style="width: 220px;height: 430px;">
                </li>
                <li class="right">
                    <img src="images/adverts/eternalvibesmobile3.png" style="width: 220px;height: 430px;">
                    <div class="caption right-align top blue-text">
                        <h3>Start Finding Friends On The Go.</h3>
                        <h5 class="orange-text">Make new connection using our mobile app</h5>
                        <img src="images/logo/header2.png" style="width: 250px; height: 30px"class="brown-text" >
                    </div>
                </li>
            </ul>

        </div>
    </div >

</main >
<%- include ../../Partials/footer.ejs %>
<script >
  $(document).ready(function () {
      $('.slider').slider();
      $('.slider').slider('start');
      $('.slider').slider('next');
    $("#formValidate").validate({
      rules: {
        username: {
          required: true,
          email: true
        },
        password: {
          required: true,
          minlength: 5
        }
      },
      messages: {
        uname: {
          required: "Enter a username",
          minlength: "Enter at least 5 characters"
        },
        curl: "Enter your website",
      },
      errorElement: 'div',
      errorPlacement: function (error, element) {
        var placement = $(element).data('error');
        if (placement) {
          $(placement).append(error)
        } else {
          error.insertAfter(element);
        }
      }
    });
  });

</script >
</body >
</html >