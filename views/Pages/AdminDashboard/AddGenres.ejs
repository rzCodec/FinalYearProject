<!DOCTYPE html>
<html lang="en" >
<head >
    <%- include ../../Partials/AboveFold.ejs %>
</head>
<body >
<main>
    <div class="row" >
        <%- include ./partials/nav.ejs %>
        <div class="center-align col s4 offset-s4" style="margin-top: 5%">
            <h2 align="center">Add Genre</h2>
            <div class="form-group">
                <form name="add_genre" id="add_genre">
                    <div id="dynamic_field">
                        <input type="text" name="add_genre" id="add_genre" placeholder="Enter Genre" class="form-control name_list" />
                    </div>
                    <br/>
                    <p/>
                    <button name="submit" id="submit_genre" class="btn btn-info" value="Submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</main>
<%- include ../../Partials/footer.ejs %>
</body>
<script>

    $('#submit_genre').click(function()
    {
        $.post("https://www.eternalvibes.me/addGenres",
            {
                genreName: $('#add_genre').value
            },
            function (data, status)
            {
                console.log("Data: " + data + "\nStatus: " + status);

            });
        $('#add_genre').reset();
    });
</script>

</html>
